# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts}]
indent_style = space
indent_size = 2
tab_width = 2
quote_type = single

[*.{css,scss}]
indent_style = space
indent_size = 2
tab_width = 2
quote_type = double

[*.json]
indent_style = space
indent_size = 2
tab_width = 2

[*.html, *.md, *.jsp]
indent_style = space
indent_size = 2
tab_width = 2

[Makefile]
indent_style = space
indent_size = 2
tab_width = 2
